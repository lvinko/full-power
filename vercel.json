{
  "version": 2,
  "buildCommand": "turbo run build",
  "ignoreCommand": "npx turbo-ignore --fallback=HEAD^1",
  "installCommand": "npm install",
  "outputDirectory": "apps/web/.next",
  "monorepo": {
    "api": {
      "path": "apps/api",
      "buildCommand": "turbo run build --filter=api...",
      "outputDirectory": "dist"
    },
    "web": {
      "path": "apps/web",
      "framework": "nextjs"
    }
  }
}