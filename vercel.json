{
  "buildCommand": "turbo build",
  "outputDirectory": ".",
  "builds": [
    {
      "src": "apps/web/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "apps/api/api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "apps/api/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "apps/web/$1"
    }
  ]
}